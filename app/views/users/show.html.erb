<header>
    <%= render '/homes/header' %>
</header>

<main>
<% if flash[:notice] %>
  <p class="notice"><%= notice %></p>
<% end %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      
      <%= render '/users/user', user: @user %>

      <%= render '/books/new', book: @book %>

    </div>
    

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class ="table table-hover table-inverse">
        
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
            <% @userbooks.each do |book| %>
            <tr>
              <td><%= link_to user_path(book.user.id) do %><%= attachment_image_tag @user, :profile_image_id, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %><% end %></td>
              <td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
              <td><%= book.body %></td>
              
            </tr>
        <% end %>
          </table>
    </div>
    
  </div>
</div>

</main>

<footer>
  <%= render '/homes/footer' %>
</footer>