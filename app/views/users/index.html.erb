<header>
    <%= render '/homes/header' %>
</header>

<main>
<% if flash[:notice] %>
     <p class="notice"><%= notice %></p>
  <% end %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      
      <%= render '/users/user', user: @user %>

      <%= render '/books/new', book: @book %>

    </div>
    

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class ="table">
        
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
            <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user, :profile_image_id, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %></td>
              <td><%= user.name  %></td>
              <td><%= link_to "Show", user_path(user.id)  %></td>
            </tr>
        <% end %>
          </table>
    </div>
    
  </div>
</div>

</main>

<footer>
  <%= render '/homes/footer' %>
</footer>