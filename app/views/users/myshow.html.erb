<header>
    <%= render '/homes/header' %>
</header>

<main>
<% if flash[:notice] %>
  <p class="notice"><%= notice %></p>
<% end %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      
      <%= render '/users/user', user: @user %>

      <%= render '/books/new', book: @book %>

    </div>
    

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class ="table table-hover table-inverse">
        
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
            <% @userbooks.each do |book| %>
            <tr>
              <td></td>
              <td><%= book.title %></td>
              <td><%= book.body %></td>
              <td><%= link_to 'Edit', edit_book_path, class: 'btn btn-sm btn-success edit_book_12542'%></td>
              <td><%= link_to 'Destroy', book_path(book.id), method: :delete, class: 'btn btn-sm btn-danger destroy_book_12542', "data-confirm" => "本当に削除しますか？" %></td>
            </tr>
        <% end %>
          </table>
    </div>
    
  </div>
</div>

</main>

<footer>
  <%= render '/homes/footer' %>
</footer>