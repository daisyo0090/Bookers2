<header>
  <%= render '/homes/header' %>
</header>

<main>
  <% if flash[:notice] %>
     <p class="notice"><%= notice %></p>
  <% end %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      
      <%= render '/users/user', user: @user %>

      <%= render '/books/new', book: @book %>

    </div>
    
  <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class ="table">
        
            <tr>
              <td><%= attachment_image_tag @mybook.user, :profile_image_id, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %></br><%= link_to @mybook.user.name, user_path(@user) %></td>
              <td><%= link_to @mybook.title, book_path(@mybook) %></td>
              <td><%= @mybook.body %></td>
              <% if @user == current_user %>
              <td><%= link_to 'Edit', edit_book_path, class: 'btn btn-sm btn-success edit_book_12542'%></td>
              <td><%= link_to 'Destroy', book_path(@mybook.id), method: :delete, class: 'btn btn-sm btn-danger destroy_book_12542', "data-confirm" => "本当に削除しますか？" %></td>
              <% end %>
            </tr>
        
          </table>
    </div>
</main>